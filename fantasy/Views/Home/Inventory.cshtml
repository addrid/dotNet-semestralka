@using fantasy.Models
@using fantasy.DataObjects
@model fantasy.Models.InventoryModel

@{
    ViewBag.Title = "Inventory";
    var maxSpace = Model.MaxSpace;
    var freeSpace = Model.FreeSpace;
}

<h2>Inventory</h2>




@using (Html.BeginForm("Inventory", "Home", FormMethod.Post))
{
    @Html.HiddenFor(x => x.FreeSpace)
    @Html.HiddenFor(x => x.MaxSpace)
    @Html.HiddenFor(x => x.OwnerID)
    <div class="row">
        <div class="col-md-4">
            <h2>Current maximal space</h2>
            <p>@maxSpace.ToString();</p>
        </div>
        <div class="col-md-4">
            <h2>Current free space</h2>
            <p>@freeSpace.ToString();</p>
        </div>
    </div>

    <div class="form-group">
        <p>
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="submitButton" value="AddItem" class="btn btn-primary btn-lg" />
                <input type="submit" name="submitButton" value="RemoveItem" class="btn btn-primary btn-lg" />
                <input type="submit" name="submitButton" value="IncreaseSize" class="btn btn-primary btn-lg" />
                <input type="submit" name="submitButton" value="DecreaseSize" class="btn btn-primary btn-lg" />
            </div>
        </p>
    </div>
}